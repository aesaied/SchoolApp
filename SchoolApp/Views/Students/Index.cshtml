@using SchoolApp.Data
@model List<Student>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<form method="get">

    <input name="keyword" value="@ViewBag.KeyWord" />

    <button type="submit">Submit</button>
</form>


@if(TempData.ContainsKey("Error"))
{

  
    <div class=" alert alert-danger">@TempData["Error"]</div>
}

<a asp-action="Create">Create new student</a>

<table class="table table-bordered table-hover">
    <thead>
     <tr>
         <th>ID</th>
            <th>First name</th>
            <th>Last name</th>
            <th></th>

     </tr>
    </thead>
    <tbody>

        @foreach (var student in Model)
        {
            <tr>
                <td> @student.StudentId</td>
             <td> @student.FirstName </td>
            <td>@student.LastName</td>
            <td>

                <a asp-action="Details" asp-route-id="@student.StudentId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@student.StudentId">Edit</a> |

                    <form asp-action="Delete">
                        <input type="hidden" value="@student.StudentId" name="id" />
                        <button onclick="return confirm('Are you sure!')" class="btn btn-link" type="submit">Delete</button>
                    </form>

            </td>
        </tr>

        }

    </tbody>
   
</table>

